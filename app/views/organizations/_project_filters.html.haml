#project_filters.clearfix

  .project_status
    %a.selected{:"data-type" => "project_status", :"data-value" => "all"} All
    %a{:"data-type" => "project_status", :"data-value" => "ongoing"} Ongoing
    %a{:"data-type" => "project_status", :"data-value" => "on_hold"} On Hold
   
  .project_mate.dropdown{"data-type" => "user"}
    %span.pictos.down
    %span.current
      Everyone
    %ul.options
      %li.selected{:"data-value" => "all"} Everyone
      - @organization.users.each do |user|
        %li{:"data-value" => user.id}= user.name
   
